<% include ../common/header.ejs %>
    <div class="register-panel">
        <div class="header text-center">LYITLOVE.COM</div>
        <form action="/user/register" method="post" class="form-horizontal">
            <div class="content">
                <div class="title">用户注册</div>
                <%
                    if(error){
                %>
                <div class="notice"><%- error %></div>
                <%
                    }
                %>
                <div class="form-group">
                    <div class="col-lg-12">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" name="username" class="form-control" placeholder="用户名" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input type="password" name="password" class="form-control" placeholder="密码" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input type="password" name="repassword" class="form-control" placeholder="确认密码" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            <input type="email" name="email" class="form-control" placeholder="电子邮件" />
                        </div>
                    </div>
                </div>
                <div class="footer">
                    <a class="btn btn-default" href="/user/login">登录</a>
                    <input type="submit" value="注册" class="btn btn-info" />
                </div>
            </div>
        </form>
        <div class="text-center info">Lyitlove.com &copy; Based on Bootstrap3</div>
    </div>
<% include ../common/footer.ejs %>